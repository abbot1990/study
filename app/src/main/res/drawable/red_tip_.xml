<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="10dp"
        android:height="10dp"
        android:top="13dp">
        <!--top让bitmap可以往下偏移13dp-->
        <!--使用bitmap标签和Gravity让小红点不缩放-->
        <bitmap
            android:antialias="true"
            android:gravity="top"
            android:src="@drawable/red_tip"/>
    </item>
</layer-list>